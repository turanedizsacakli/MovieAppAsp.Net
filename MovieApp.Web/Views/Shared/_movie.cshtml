@model Movie

<div class="card mb-3" >
    <div class="row g-0" >
        <div class="col-md-4">
            <img src="/img/@Model.ImageUrl" alt="@Model.Name" width="250" />
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    <a class="btn btn-primary" href="/movies/details/@Model.MovieId">Detaylar</a>
                </p>
                <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
            </div>
        </div> 
    </div>
</div>

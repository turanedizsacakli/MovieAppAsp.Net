        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text"> @Model.Description </p>
                <p class="card-text"> @Model.Director </p>
                <p class="card-text">
                    <ul>
                        @foreach (var aktor in Model.Aktors)
                        {

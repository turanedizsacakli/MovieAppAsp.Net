@model MoviesViewModel

<h1>Film Listesi</h1>

<div id="filmler">

    @if (Model.Movies.Count > 0)
    {
        @foreach (var movie in Model.Movies)
        {
            @await Html.PartialAsync("_movie", movie)
        }
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Film bulunamadı...
        </div>
    }

        
    </div>


